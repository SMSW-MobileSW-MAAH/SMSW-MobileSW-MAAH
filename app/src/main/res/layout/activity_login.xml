<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디와 비밀번호로"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="30sp"
        style="@style/Title"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 해주세요"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30sp"
        style="@style/Title"
        />

    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        style="@style/editTitle"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="80sp"/>

    <EditText
        android:id="@+id/editId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtId"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="ID"
        android:background="@drawable/edittext_rounded1"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:padding="15sp"
        style="@style/inputPlaceholder"/>

    <TextView
        android:id="@+id/txtPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        style="@style/editTitle"
        app:layout_constraintTop_toBottomOf="@+id/editId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtPasswordTitle"
        android:layout_marginTop="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edittext_rounded1"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:padding="15sp"
        style="@style/inputPlaceholder"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="로그인하기"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/button_radius1"
        android:textColor="@color/white"
        style="@style/GreenButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>
