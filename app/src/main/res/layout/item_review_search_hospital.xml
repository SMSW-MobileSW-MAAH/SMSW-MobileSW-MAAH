<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_review_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/shape_white_radius_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_review_search_hospital_name"
            style="@style/semiboldBody02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울시립영보정신요양원"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_review_search_hospital_address"
            style="@style/semiboldBody03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/radius_8_green"
            android:padding="6dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:text="주소"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_review_search_hospital_name" />

        <TextView
            android:id="@+id/tv_review_search_hospital_address_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="경기도 용인시 처인구 이동면 이원로 483"
            app:layout_constraintBottom_toBottomOf="@id/tv_review_search_hospital_address"
            app:layout_constraintStart_toEndOf="@id/tv_review_search_hospital_address"
            app:layout_constraintTop_toTopOf="@id/tv_review_search_hospital_address" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_review_search_hospital"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
